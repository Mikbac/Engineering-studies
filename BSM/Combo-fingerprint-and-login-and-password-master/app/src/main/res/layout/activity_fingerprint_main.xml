<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fingerprint.FingerprintMainActivity">

    <TextView
        android:id="@+id/paraLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fingerprintImage"
        android:layout_marginTop="169dp"
        android:padding="20dp"
        android:text="@string/place_your_finger_on_the_scanner_to_proceed_pl"
        android:textAlignment="center"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/headingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="@string/fingerprint_authentication"
        android:textColor="@android:color/black"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/fingerprintImage"
        android:layout_width="189dp"
        android:layout_height="211dp"
        android:layout_below="@+id/headingLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-2dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@mipmap/ic_fingerprint"
        tools:srcCompat="@mipmap/ic_fingerprint" />

    <TextView
        android:id="@+id/paraLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fingerprintImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:padding="20dp"
        android:text="@string/place_your_finger_on_the_scanner_to_proceed"
        android:textAlignment="center"
        android:textSize="21sp" />

</RelativeLayout>